@page
@model User.CreateModel
@{
    ViewData["Title"] = "Create User";
}

<div class="row">
    <div class="col">
        <h2>@ViewData["Title"]</h2>
        <hr />
    </div>
</div>
<form id="formCreate" method="post">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="col-12 text-danger"></div>
        <div class="col-auto col-properties me-sm-5 mb-3">
            <h5 class="text-muted">Enter the user's details:</h5>
            <hr />
            <div class="form-floating">
                <input class="form-control" asp-for="Input.Email" autocomplete="email" aria-required="true" />
                <label class="control-label" asp-for="Input.Email"></label>
                <span class="text-danger" asp-validation-for="Input.Email"></span>
            </div>
            <div class="form-floating">
                <input class="form-control" asp-for="Input.Password" autocomplete="new-password" aria-required="true" />
                <label class="control-label" asp-for="Input.Password"></label>
                <span class="text-danger" asp-validation-for="Input.Password"></span>
            </div>
            <div class="form-floating">
                <input class="form-control" asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" />
                <label class="control-label" asp-for="Input.ConfirmPassword"></label>
                <span class="text-danger" asp-validation-for="Input.ConfirmPassword"></span>
            </div>
            <div class="form-floating">
                <input class="form-control" asp-for="Input.GivenName" autocomplete="given-name" />
                <label class="control-label" asp-for="Input.GivenName"></label>
                <span class="text-danger" asp-validation-for="Input.GivenName"></span>
            </div>
            <div class="form-floating">
                <input class="form-control" asp-for="Input.Surname" autocomplete="family-name" />
                <label class="control-label" asp-for="Input.Surname"></label>
                <span class="text-danger" asp-validation-for="Input.Surname"></span>
            </div>
            <div class="form-floating">
                <input class="form-control" asp-for="Input.PhoneNumber" autocomplete="tel" />
                <label class="control-label" asp-for="Input.PhoneNumber"></label>
                <span class="text-danger" asp-validation-for="Input.PhoneNumber"></span>
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Input.LockoutEnabled" />
                    @Html.DisplayNameFor(model => model.Input.LockoutEnabled)
                </label>
            </div>
            <div class="col-auto d-none d-sm-block align-items-center mt-3">
                <input class="btn btn-primary" id="btnCreate" type="submit" value="Create" />
                <a class="btn btn-secondary" asp-page="Index">Cancel</a>
            </div>
        </div>
        <div class="col col-roles mb-3">
            <h5 class="text-muted text-center mb-3">Select the user's role assignments:</h5>
            <hr />
            <div class="mx-auto">
                <table class="table table-sm" data-order='[[1,"asc"]]'>
                    <thead>
                        <tr>
                            <th class="col-auto" id="thSelect" data-orderable="false">
                                <label asp-for="Input.Roles.ElementAt(0).IsAssigned"></label>
                            </th>
                            <th><label asp-for="Input.Roles.ElementAt(0).Name"></label></th>
                            <th><label asp-for="Input.Roles.ElementAt(0).Description"></label></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var role in Model.Input.Roles)
                            {
                                var checkedVal = (role.IsAssigned) ? "checked" : "";
                                <tr>
                                    <td class="align-middle">
                                        <input class="form-check ms-3" type="checkbox" @checkedVal />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(x => role.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(x => role.Description)
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-auto d-block d-sm-none align-items-center mt-3">
                <input class="btn btn-primary" id="btnCreate" type="submit" value="Create" />
                <a class="btn btn-secondary" asp-page="Index">Cancel</a>
            </div>
        </div>

        <input id="hfRoleList" name="hfRoleList" type="hidden" value="" />
    </div>
</form>

@section Scripts {

    <script defer>
        var dt = $('table').DataTable();

        $("#btnCreate").click(function (event) {
            var roles = [];

            dt.column("#thSelect").nodes().to$().children("input:checked").each(function () {
                roles.push(dt.row($(this).closest("tr")).data()[1]);
            });

            $("#hfRoleList").val(roles.join(','));
            $("#formCreate").submit();
        });
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
