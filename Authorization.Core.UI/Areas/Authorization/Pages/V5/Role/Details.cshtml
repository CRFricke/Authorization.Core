@page
@model Role.DetailsModel
@{
    ViewData["Title"] = "Role Details";

    var roleClaims = Model.RoleModel.Id == SysGuids.Role.Administrator
        ? Model.RoleModel.RoleClaims.Select(rc => rc.Claim)
        : Model.RoleModel.RoleClaims.Where(rc => rc.IsAssigned).Select(rc => rc.Claim);

    var classEdit = (await AuthManager.IsAuthorizedAsync(User, SysClaims.Role.Update)) ? "" : "disabled";
}

@section css {

    <environment include="Development">
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs5/dt-1.11.4/datatables.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs5/dt-1.11.4/datatables.min.css" />
    </environment>

    <style>
        .col-properties {
            min-width: 25rem;
            max-width: 30rem;
        }

        .col-role-claims {
            min-width: 25rem;
            max-width: 35rem;
        }

        .form-floating textarea.form-control {
            height: 10rem;
        }
    </style>
}

<div class="row">
    <div class="col">
        <h2>@ViewData["Title"]</h2>
        <hr />
    </div>
</div>
<div class="row mx-sm-1">
    <div class="col col-properties me-sm-5">
        <h5 class="text-muted">The role's properties:</h5>
        <hr />
        <div class="form-floating">
            <input asp-for="RoleModel.Id" class="form-control" disabled />
            <label asp-for="RoleModel.Id" class="control-label"></label>
        </div>
        <div class="form-floating">
            <input asp-for="RoleModel.Name" class="form-control" disabled />
            <label asp-for="RoleModel.Name" class="control-label"></label>
        </div>
        <div class="form-floating mb-3">
            <textarea asp-for="RoleModel.Description" class="form-control" disabled ></textarea>
            <label asp-for="RoleModel.Description" class="control-label"></label>
        </div>
        <div class="row mx-sm-1">
            <div class="col-auto">
                <a class="@classEdit" asp-page="./Edit" asp-route-id="@Model.RoleModel.Id">Edit</a>
            </div>
            <div class="col-auto px-0">|</div>
            <div class="col-auto">
                <a asp-page="./Index">Back to List</a>
            </div>
        </div>
    </div>
    <div class="col col-role-claims">
        <h5 class="text-center text-muted mb-3">The role's claim assignments:</h5>
        <hr />
        <div class="mx-auto">
            <table class="table table-sm" data-order='[[1,"asc"]]'>
                <thead>
                    <tr>
                        <th class="col-auto" data-orderable="false">
                            <label asp-for="RoleModel.RoleClaims.ElementAt(0).IsAssigned"></label>
                        </th>
                        <th><label asp-for="RoleModel.RoleClaims.ElementAt(0).Claim"></label></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var claim in roleClaims)
                        {
                            <tr>
                                <td class="align-middle">
                                    <input class="form-check ms-3" type="checkbox" checked disabled />
                                </td>
                                <td>
                                    @claim
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {

    <environment include="Development">
        <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/v/bs5/dt-1.11.4/datatables.js"></script>
    </environment>
    <environment exclude="Development">
        <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/v/bs5/dt-1.11.4/datatables.min.js"></script>
    </environment>

    <script defer>
        $('table').DataTable();
    </script>
}
